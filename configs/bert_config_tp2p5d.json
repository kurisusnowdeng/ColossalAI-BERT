{
    "model": {
        "type": "bert_oppo"
    },
    "hyperparameter": {
        "batch_size": 32,
        "global_batch_size": 4096,
        "learning_rate": 0.0001,
        "min_lr": 0.00001,
        "num_epochs": 4,
        "steps_per_epoch": 10,
        "warmup_steps": 4
    },
    "fp16": {
        "initial_scale": 32768
    },
    "gradient_checkpoint": false,
    "clip_grad_norm": 1.0,
    "parallel": {
        "tensor": {
            "mode": "2.5d",
            "size": 4,
            "depth": 1
        }
    }
}