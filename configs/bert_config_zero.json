{
    "model": {
        "type": "bert_oppo"
    },
    "hyperparameter": {
        "batch_size": 8,
        "global_batch_size": 4096,
        "learning_rate": 0.0001,
        "min_lr": 0.00001,
        "num_epochs": 2,
        "steps_per_epoch": 10,
        "warmup_steps": 4
    },
    "zero": {
        "model_config": {
            "tensor_placement_policy": "cuda"
        },
        "optimizer_config": {
            "initial_scale": 32768
        }
    },
    "gradient_checkpoint": false,
    "clip_grad_norm": 1.0,
    "parallel": {
        "tensor": {
            "mode": "1d",
            "size": 2
        }
    }
}